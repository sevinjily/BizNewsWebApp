@model List<Tag>
<a href="/admin/tag/create" class="btn btn-dark">Create</a>
    <table class="table table-hover table-bordered table-danger">

    <thead>
        <tr>
            <th>#</th>
            <th>Tag Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

    </thead>
    @{int counter=0;}
    <tbody>
        @foreach (var item in Model)
        {
            counter++;
            <tr>
           <td>@counter</td> 
           <td>@item.TagName</td>
           <td><a href="/admin/tag/edit/@item.Id" class="btn btn-warning">Edit</a></td>
           <td><a href="/admin/tag/delete/@item.Id" class="btn btn-danger">Delete</a></td>
        </tr>
        }
            
    </tbody>
    </table>